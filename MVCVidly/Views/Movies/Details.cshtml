@model MVCVidly.Models.Movie
@{
    ViewBag.Title = "Movie Details";
}

<h2>Movie Details</h2>

<ul>
    <li>
        @Model.Name
        <ul>
            <li><b>Genre: </b>@Model.Genre.Name</li>
            <li><b>Date Added: </b>@Convert.ToDateTime(Model.DateAdded).ToString("dd/MM/yyyy")</li>
            <li><b>Release Date: </b>@Convert.ToDateTime(Model.ReleaseDate).ToString("dd/MM/yyyy")</li>
            <li><b>Number In Stock: </b>@Model.NumberInStock</li>
            
        </ul>
</li>
</ul>

@Html.ActionLink("Back To List", "Index", "Movies")

